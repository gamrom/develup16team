	<%= form_with(model: room, local: true, html:{class:"new-mother"}) do |form| %>
	 <div class="new-mother">
	 
	  <% if room.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

		  <ul>
		  <% room.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		  <% end %>
		  </ul>
		</div>
	  <% end %>
	  
	  <div class="new-session1">
		 <div class="new-title">제목</div>
		 <%= form.text_field :title, class: "new-title-input form-control" %>
